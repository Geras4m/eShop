

<h3>Cart Page</h3>
<table class="table" border="1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>            
            <th>Sub Total</th>
            <th>Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td>@item.Product.Id</td>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>

                <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id" class="btn btn-danger">Remove</a></td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    </tbody>
    
</table>
<br>
<a asp-controller="Products" asp-action="Index">Continue Shopping</a>
